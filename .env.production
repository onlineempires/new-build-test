# Production Environment Variables
# These variables are for production deployment

# Disable all development tools in production
NEXT_PUBLIC_SHOW_DEV_TOOLS=false
NEXT_PUBLIC_ENABLE_ROLE_SWITCHER=false

# API Configuration - Update with your production API URL
NEXT_PUBLIC_API_URL=https://api.digitalera.com

# Admin Configuration
NEXT_PUBLIC_ADMIN_SESSION_DURATION=28800000

# Feature Flags
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_AFFILIATE=true
NEXT_PUBLIC_ENABLE_EXPERT_DIRECTORY=true